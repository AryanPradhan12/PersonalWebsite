  <div class="grid-contacts">
    <!-- Personal Email -->
    <article class="card card-stretch">
      <div class="kicker">Email</div>
      <h3 style="margin:6px 0 8px">Personal Gmail</h3>
      <p class="p">
        For academic, project, or collaboration opportunities, email
        <a href="mailto:aryanrp2007@gmail.com">aryanrp2007@gmail.com</a>.
      </p>
    </article>

    <!-- Instagram Personal -->
    <article class="card card-stretch">
      <div class="kicker">Social</div>
      <h3 style="margin:6px 0 8px">Instagram — Personal</h3>
      <p class="p">
        Follow <b>@aryan.pradhan2</b> for personal updates and my CS/DS journey.
