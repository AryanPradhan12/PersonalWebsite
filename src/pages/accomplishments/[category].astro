---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { categories, type Category } from "../../data/categories";

const { category } = Astro.params;
const cat: Category | undefined = categories.find(c => c.slug === category);

if (!cat) {
  throw new Error(`Unknown category: ${category}`);
}
---
<BaseLayout title={`${cat.title} • Aryan Pradhan`} active="accomplishments">
  <a href="/accomplishments" class="tag">← Back to all categories</a>
  <h1 class="h1" style="margin-top:10px">{cat.title}</h1>
  <p class="p">{cat.blurb}</p>

  {cat.items.length === 0 ? (
    <div class="card" style="margin-top:16px">
      <p class="p">No entries yet — you’ll add them here later.</p>
      <!-- EXAMPLE of how to add items:
      Update src/data/categories.ts like:
      items: [
        "U16 Captain — WS",
        "Founder of MHC",
        "Founder of MYP",
        "Happiness Team"
      ]
      -->
    </div>
  ) : (
    <ul style="margin-top:16px; padding-left:18px; line-height:1.9">
      {cat.items.map((it) => <li>{it}</li>)}
    </ul>
  )}
</BaseLayout>