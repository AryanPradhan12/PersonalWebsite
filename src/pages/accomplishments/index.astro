---
import BaseLayout from "../../layouts/BaseLayout.astro";

const categories = [
  { href: "/accomplishments/leadership",        title: "Leadership",              blurb: "Teams, initiatives, roles." },
  { href: "/accomplishments/internships",       title: "Internships",             blurb: "Industry experiences & programs." },
  { href: "/accomplishments/communityservice",  title: "Community Service",       blurb: "Service initiatives & impact." },
  { href: "/accomplishments/researchwork",      title: "Research Work",           blurb: "Papers, presentations, findings." },
  { href: "/accomplishments/courses",           title: "Courses & Certifications", blurb: "Coursework, tests, certificates." },
  { href: "/accomplishments/awards",            title: "Competitions & Awards",   blurb: "Awards, distinctions, contests." },
];
---
<BaseLayout title="Accomplishments â€¢ Aryan Pradhan" active="accomplishments">
  <h1 class="h1">Accomplishments</h1>
  <p class="p">Browse by category. Each card links to a page you can fill later.</p>

  <div class="grid" style="margin-top:16px">
    {categories.map(c => (
      <a class="card" href={c.href}>
        <div class="kicker">{c.title}</div>
        <p class="p" style="margin-top:8px">{c.blurb}</p>
      </a>
    ))}
  </div>
</BaseLayout>