---
import BaseLayout from "../../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL;

const categories = [
  { slug: "leadership", title: "Leadership", blurb: "Teams, initiatives, roles." },
  { slug: "internships", title: "Internships", blurb: "Industry experiences & programs." },
  { slug: "communityservice", title: "Community Service", blurb: "Service initiatives & impact." },
  { slug: "researchwork", title: "Research Work", blurb: "Papers, presentations, findings." },
  { slug: "courses", title: "Courses & Certifications", blurb: "Coursework, tests, certificates." },
  { slug: "awards", title: "Competitions & Awards", blurb: "Awards, distinctions, contests." },
];
---
<BaseLayout title="Accomplishments â€¢ Aryan Pradhan" active="accomplishments">
  <h1 class="h1">Accomplishments</h1>
  <p class="p">Browse by category.</p>

  <div class="grid" style="margin-top:16px">
    {categories.map((c) => (
      <a class="card" href={`${base}accomplishments/${c.slug}`}>
        <div class="kicker">{c.title}</div>
        <p class="p" style="margin-top:8px">{c.blurb}</p>
      </a>
    ))}
  </div>
</BaseLayout>