---
const base = import.meta.env.BASE_URL;  // '/' in dev, '/PersonalWebsite/' on Pages
const { title = "Aryan Pradhan", active = "" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href={`${base}favicon.svg`} />
    <link rel="stylesheet" href={`${base}styles/global.css`} />
  </head>
  <body>
    <header class="site-header">
      <div class="shell">
        <a class="brand" href={`${base}`}>AP</a>
        <nav class="nav">
          <a class={active==='home' ? 'active' : ''} href={`${base}`}>About Me</a>
          <a class={active==='accomplishments' ? 'active' : ''} href={`${base}accomplishments`}>Accomplishments</a>
          <a class={active==='blog' ? 'active' : ''} href={`${base}blog`}>Blog</a>
          <a class={active==='contact' ? 'active' : ''} href={`${base}contact`}>Contact Me</a>
        </nav>
      </div>
    </header>

    <main class="shell">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="shell">Â© {new Date().getFullYear()} Aryan Pradhan</div>
    </footer>
  </body>
</html>